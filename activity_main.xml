<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Flashlight Image -->
    <ImageView
        android:id="@+id/imageFlashlight"
        android:layout_width="395dp"
        android:layout_height="709dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/flashlight_off" />

    <!-- Flashlight Switch (Rotated Vertically) -->
    <Switch
        android:id="@+id/switchFlashlight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageFlashlight"
        android:layout_alignTop="@+id/imageFlashlight"
        android:layout_alignEnd="@+id/imageFlashlight"
        android:layout_alignBottom="@+id/imageFlashlight"
        android:layout_marginStart="90dp"
        android:layout_marginTop="354dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="298dp"
        android:rotation="90"

        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:thumbTint="@android:color/holo_red_dark"
        android:trackTint="@android:color/darker_gray" />
</RelativeLayout>
